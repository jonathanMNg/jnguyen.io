---
import AnimatedCard from '@/helpers/AnimatedCard';
export type ResumeContext = {
    name?: string;
    detail: string;
    period: string;
}

export interface Props {
  header: string;
  context: ResumeContext[];
}
const { header, context } = Astro.props;
---
<AnimatedCard client:load>
<div class="flex flex-col lg:flex-row items-start pb-5">
  <div class="lg:w-1/4">
    <h1 class="">{header}</h1>
  </div>
  <div class="lg:w-3/4">
    {context.map(ct => 
      <div class="flex flex-col lg:flex-row items-start pb-5">
        <div class="lg:w-2/3">
          {ct.name!= null ?(
            <h5>{ct.name}</h5>) : ""}
            <p>{ct.detail}</p>
        </div>
        <div class="lg:w-1/3">
          <p class="m-0 text-end">{ct.period}</p>
        </div>
      </div>
    )}
  </div>
</div>
</AnimatedCard>